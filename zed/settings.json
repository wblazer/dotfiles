{
  "icon_theme": "Material Icon Theme",
  "show_edit_predictions": false,
  "vim_mode": true,
  "base_keymap": "None",
  "relative_line_numbers": true,
  "vertical_scroll_margin": 8,
  "autosave": "off",
  "ui_font_size": 14,
  "ui_font_family": "Iosevka Nerd Font",
  "buffer_font_size": 14.0,
  "buffer_font_weight": 400,
  "buffer_font_family": "Iosevka Nerd Font",
  "buffer_line_height": {
    "custom": 1.25
  },
  "active_pane_modifiers": {
    "magnification": 1.0,
    "border_size": 1.0,
    "inactive_opacity": 1.0
  },
  "command_aliases": {
    "W": "w"
  },
  "vim": {
    "use_multiline_find": true
  },
  "show_signature_help_after_edits": true,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ros√© Pine Moon"
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "extend_comment_on_newline": false,
  "current_line_highlight": "all",
  "cursor_blink": false,
  "auto_signature_help": true,
  "expand_excerpt_lines": 4,
  "scrollbar": {
    "cursors": true
  },
  "search": {
    "regex": false,
    "include_ignored": false
  },
  "soft_wrap": "editor_width",
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "use_system_path_prompts": false,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "format_on_save": "off",
  "formatter": "auto",
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "Ruby": {
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "!rubocop",
        "..."
      ]
    },
    "ERB": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": false
      },
      "tab_size": 4
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": false
      },
      "tab_size": 4
    },
    "PHP": {
      "language_servers": [
        "intelephense",
        "!phpactor",
        "..."
      ],
      "prettier": {
        "allowed": false
      },
      "remove_trailing_whitespace_on_save": false
    }
  },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    },
    "phpactor": {
      "phpunit.enabled": true,
      "language_server.diagnostic_ignore_codes": [
        "worse.docblock_missing_param",
        "worse.docblock_missing_return_type",
        "worse.missing_return_type",
        "worse.unused_import"
      ]
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": [
            "\\bclass:\\s*['\"]([^'\"]*)['\"]"
          ]
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": [
            "import/order"
          ]
        }
      }
    }
  },
  "show_user_picture": false,
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": false
  },
  "projects_online_by_default": false,
  "telemetry": {
    "diagnostics": false
  },
  "terminal": {
    "button": false
  },
  "project_panel": {
    "default_width": 300,
    "indent_size": 15,
    "auto_fold_dirs": true,
    "auto_reveal_entries": false
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "disabled_globs": [
      ".env"
    ]
  },
  "edit_predictions_disabled_in": [
    "comment",
    "string"
  ],
  "outline_panel": {
    "default_width": 300,
    "indent_size": 15
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "experimental.theme_overrides": {
    "background": "#191724d0",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "editor.active_line.background": "#21202e",
    "editor.document_highlight.bracket_background": "#403d52",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "panel.background": "#00000000",
    "toolbar.background": "#00000000",
    "tab.active_background": "#c4a7e718",
    "tab.inactive_background": "#00000000",
    "status_bar.background": "#191724d0",
    "title_bar.background": "#191724d0",
    "title_bar.inactive_background": "#191724d0",
    "border.selected": "#e0def4b0",
    "surface.background": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#e0def410",
    "ghost_element.background": "#00000000",
    "hint": "#6e6a86b0",
    "hint.background": "#19172400"
  }
}
