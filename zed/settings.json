  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },

  "current_line_highlight": "all",
  "cursor_blink": false,


  "scrollbar": {
    "cursors": true
  },

  "search": {
    "regex": false
  },

  "soft_wrap": "editor_width",

  "tab_bar": {
    "show_nav_history_buttons": false
  },

  "use_system_path_prompts": false,

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },

  "format_on_save": "off",
  "formatter": "auto",

  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "!ruby-lsp", "!rubocop", "..."]
    },
    "ERB": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": false
      },
      "tab_size": 4
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": false
      },
      "tab_size": 4
    },
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."]
    }
  },

  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    },
    // "ruby-lsp": {
    //   "initialization_options": {
    //     "enabledFeatures": {
    //       "diagnostics": false
    //     }
    //   }
    // },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  },

  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },

  "preview_tabs": {
    "enable_preview_from_code_navigation": false
  },

  "projects_online_by_default": false,
  "telemetry": {
    "diagnostics": false
  },

  "terminal": {
    "button": false
  },

  "project_panel": {
    "default_width": 300,
    "indent_size": 15,
    "auto_fold_dirs": true,
    "auto_reveal_entries": false
  },

  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    }
  },

  "features": {
    "inline_completion_provider": "none"
  },

  "outline_panel": {
    "default_width": 300,
    "indent_size": 15
  }
}
