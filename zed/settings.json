// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "vim_mode": true,
  "base_keymap": "None",
  "relative_line_numbers": true,
  "vertical_scroll_margin": 8,
  "autosave": "off",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "CaskaydiaMono Nerd Font",
  "buffer_line_height": { "custom": 1.25 },

  "command_aliases": {
    "W": "w"
  },

  "vim": {
    "use_multiline_find": true
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Frapp√© - No Italics"
  },

  // "experimental.theme_overrides": {
  //   "background": "#80808040",
  //   "editor.background": "#000000E8",
  //   "editor.gutter.background": "#000000E8",
  //   "editor.active_line.background": "#FFFFFF01",
  //   "editor.document_highlight.read_background": "#FFFFFF06",
  //   "tab_bar.background": "#000000EC",
  //   "terminal.background": "#00000000",
  //   "toolbar.background": "#000000EC",
  //   "tab.active_background": "#45858820",
  //   "tab.inactive_background": "#00000000",
  //   "status_bar.background": "#101010F8",
  //   "title_bar.background": "#101010F8",
  //   "title_bar.inactive_background": "#101010F0",
  //   "panel.background": "#000000EC",
  //   "border.variant": "#000000E0",
  //   "scrollbar.track.border": "#000000E0",
  //   "scrollbar.thumb.background": "#80808010",
  //   "elevated_surface.background": "#181818FF"
  // },

  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },

  "current_line_highlight": "all",
  "cursor_blink": false,

  "scrollbar": {
    "cursors": true
  },

  "tab_bar": {
    "show_nav_history_buttons": false
  },

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },

  "format_on_save": "off",
  "formatter": "auto",

  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "!ruby-lsp", "!rubocop", "..."]
    },
    "ERB": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },

  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    },
    // "ruby-lsp": {
    //   "initialization_options": {
    //     "enabledFeatures": {
    //       "diagnostics": false
    //     }
    //   }
    // },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  },

  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },

  "preview_tabs": {
    "enable_preview_from_code_navigation": true
  },

  "projects_online_by_default": false,
  "telemetry": {
    "diagnostics": false
  },

  "terminal": {
    "button": false
  },

  "project_panel": {
    "default_width": 300,
    "indent_size": 15,
    "auto_fold_dirs": true
  },

  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    }
  },

  "features": {
    "inline_completion_provider": "none"
  },

  "outline_panel": {
    "default_width": 300,
    "indent_size": 15
  }
}
