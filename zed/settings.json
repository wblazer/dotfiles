// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "vim_mode": true,
  "base_keymap": "None",
  "relative_line_numbers": true,
  "vertical_scroll_margin": 8,
  "autosave": "off",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "CaskaydiaMono Nerd Font Mono",
  "buffer_line_height": { "custom": 1.25 },

  "active_pane_modifiers": {
    "magnification": 1.0,
    "border_size": 1.0,
    "inactive_opacity": 1.0
  },

  "command_aliases": {
    "W": "w"
  },

  "vim": {
    "use_multiline_find": true
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },

  // Catppuccin Macchiato
  "experimental.theme_overrides": {
    "background": "#24273aE0",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "editor.active_line.background": "#FFFFFF02",
    "editor.document_highlight.bracket_background": "#7DAEA318",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "panel.background": "#00000000",
    "toolbar.background": "#00000000",
    "tab.active_background": "#b7bdf818",
    "tab.inactive_background": "#00000000",
    "status_bar.background": "#24273aE0",
    "title_bar.background": "#24273aE0",
    "title_bar.inactive_background": "#24273aE0",
    "border.selected": "#a5adcbFF",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#a5adcb08",
    "surface.background": "#00000000",
    "ghost_element.background": "#00000000"
  },

