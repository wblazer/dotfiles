{
  "icon_theme": "Material Icon Theme",
  "show_edit_predictions": true,
  "vim_mode": true,
  "base_keymap": "None",
  "relative_line_numbers": true,
  "vertical_scroll_margin": 8,
  "autosave": "off",
  "minimap": {
    "show": "always"
  },
  "ui_font_size": 14,
  "ui_font_family": "Iosevka Nerd Font",
  "buffer_font_size": 14.0,
  "buffer_font_weight": 400,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": {
    "custom": 1.25
  },
  "active_pane_modifiers": {
    "magnification": 1.0,
    "border_size": 1.0,
    "inactive_opacity": 1.0
  },
  "command_aliases": {
    "W": "w"
  },
  "vim": {
    "use_multiline_find": true
  },
  "show_signature_help_after_edits": true,
  "theme": {
    "mode": "dark",
    "dark": "Gruvbox Material",
    "light": "Gruvbox Light"
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "extend_comment_on_newline": false,
  "current_line_highlight": "all",
  "cursor_blink": false,
  "auto_signature_help": true,
  "expand_excerpt_lines": 4,
  "scrollbar": {
    "cursors": true
  },
  "search": {
    "regex": false,
    "include_ignored": false
  },
  "soft_wrap": "editor_width",
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "use_system_path_prompts": false,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.organizeImports": true
  },
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "Ruby": {
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "!rubocop",
        "..."
      ]
    },
    "ERB": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "tab_size": 4
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "tab_size": 4
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": false
      },
      "tab_size": 4
    },
    "PHP": {
      "show_edit_predictions": true,
      "language_servers": [
        "intelephense",
        "!phpactor",
        "..."
      ],
      "prettier": {
        "allowed": false
      }
    }
  },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    },
    "phpactor": {
      "phpunit.enabled": true,
      "language_server.diagnostic_ignore_codes": [
        "worse.docblock_missing_param",
        "worse.docblock_missing_return_type",
        "worse.missing_return_type",
        "worse.unused_import"
      ]
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": [
            "\\bclass:\\s*['\"]([^'\"]*)['\"]"
          ]
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": [
            "import/order"
          ]
        }
      }
    }
  },
  "show_user_picture": false,
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": false
  },
  "projects_online_by_default": false,
  "telemetry": {
    "diagnostics": false
  },
  "terminal": {
    "button": false
  },
  "project_panel": {
    "default_width": 300,
    "indent_size": 15,
    "auto_fold_dirs": true,
    "auto_reveal_entries": true
  },
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      },
      "ask": {
        "name": "Ask",
        "tools": {
          "symbol_info": true,
          "copy_path": true,
          "code_symbols": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
          "terminal": false
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      },
      "code-writer": {
        "name": "Code Writer",
        "tools": {
          "terminal": true,
          "copy-path": true,
          "create-file": true,
          "delete-path": true,
          "diagnostics": true,
          "find-replace-file": true,
          "edit-files": true,
          "fetch": true,
          "list-directory": true,
          "move-path": true,
          "now": true,
          "path-search": true,
          "read-file": true,
          "regex-search": true,
          "thinking": true
        },
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "version": "2",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "enabled_in_text_threads": false,
    "disabled_globs": [
      ".env"
    ],
    "mode": "subtle"
  },
  "edit_predictions_disabled_in": [
    "comment",
    "string"
  ],
  "outline_panel": {
    "default_width": 300,
    "indent_size": 15
  },
  "indent_guides": {
    "coloring": "indent_aware"
  }
}
