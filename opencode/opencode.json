{
  "theme": "system",
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "npm *": "ask",
      "yarn *": "ask",
      "git *": "ask",
      "npx *": "ask",
      "tsc *": "ask"
    }
  },
  "agent": {
    "plan": {
      "mode": "primary",
